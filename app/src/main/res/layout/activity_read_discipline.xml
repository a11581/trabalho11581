<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadDisciplineActivity">

    <TextView
        android:id="@+id/username4Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/buttonPreviousDiscipline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/disciplineListId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDeleteDiscipline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPreviousDiscipline" />

    <Button
        android:id="@+id/buttonCreateDiscipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Create"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDeleteDiscipline"
        app:layout_constraintEnd_toStartOf="@+id/buttonDeleteDiscipline"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonUpdateDiscipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Update"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDatesDiscipline"
        app:layout_constraintEnd_toStartOf="@+id/buttonDatesDiscipline"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDeleteDiscipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Delete"
        app:layout_constraintBottom_toTopOf="@+id/buttonDatesDiscipline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCreateDiscipline"
        app:layout_constraintTop_toBottomOf="@+id/disciplineListId" />

    <Button
        android:id="@+id/buttonDatesDiscipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:text="Dates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonUpdateDiscipline"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteDiscipline" />

    <Button
        android:id="@+id/buttonCurrentDiscipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="Current"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonPreviousDiscipline"
        app:layout_constraintEnd_toStartOf="@+id/buttonPreviousDiscipline"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPreviousDiscipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="Previous"
        app:layout_constraintBottom_toTopOf="@+id/disciplineListId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCurrentDiscipline"
        app:layout_constraintTop_toBottomOf="@+id/username4Id" />

</android.support.constraint.ConstraintLayout>